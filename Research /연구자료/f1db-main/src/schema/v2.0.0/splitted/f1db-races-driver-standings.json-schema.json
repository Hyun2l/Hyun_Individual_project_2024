{
  "$id": "https://www.f1db.net/schema/v2.0.0/splitted/f1db-races-driver-standings.json-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "F1DB",
  "description": "F1DB Races Driver Standings JSON Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/RaceDriverStanding"
  },
  "additionalProperties": false,
  "definitions": {
    "RaceDriverStanding": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "raceId": {
          "type": "integer",
          "description": "The race."
        },
        "year": {
          "type": "integer",
          "description": "The year."
        },
        "round": {
          "type": "integer",
          "minimum": 1,
          "description": "The round."
        },
        "positionDisplayOrder": {
          "type": "integer",
          "minimum": 1,
          "description": "The position display order."
        },
        "positionNumber": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "The position number."
        },
        "positionText": {
          "type": "string",
          "pattern": "^[0-9]+|DSQ|EX$",
          "description": "The position text."
        },
        "driverId": {
          "type": "string",
          "description": "The driver."
        },
        "points": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01,
          "description": "The points."
        },
        "positionsGained": {
          "type": ["integer", "null"],
          "description": "The positions gained in the championship since the previous race."
        }
      },
      "required": [
        "raceId",
        "year",
        "round",
        "positionDisplayOrder",
        "positionNumber",
        "positionText",
        "driverId",
        "points",
        "positionsGained"
      ]
    }
  }
}
