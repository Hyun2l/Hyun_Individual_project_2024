{
  "$id": "https://www.f1db.net/schema/v2.0.0/splitted/f1db-seasons-driver-standings.json-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "F1DB",
  "description": "F1DB Seasons Driver Standings JSON Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/SeasonDriverStanding"
  },
  "additionalProperties": false,
  "definitions": {
    "SeasonDriverStanding": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "year": {
          "type": "integer",
          "description": "The year."
        },
        "positionDisplayOrder": {
          "type": "integer",
          "minimum": 1,
          "description": "The position display order."
        },
        "positionNumber": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "The position number."
        },
        "positionText": {
          "type": "string",
          "pattern": "^[0-9]+|DSQ|EX$",
          "description": "The position text."
        },
        "driverId": {
          "type": "string",
          "description": "The driver."
        },
        "points": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01,
          "description": "The points."
        }
      },
      "required": [
        "year",
        "positionDisplayOrder",
        "positionNumber",
        "positionText",
        "driverId",
        "points"
      ]
    }
  }
}
